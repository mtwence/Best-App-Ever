<div class="card">
  <div class="card-image" onclick="this.querySelector('a').click(); return true;"> <a href="/games/{{game.id}}/tournaments"></a>
      <figure class="image is-3by2">
        <img class="" src="{{game.cover_art}}" alt="game art">
      </figure>
  </div>
  <div class="card-content m-2 is-8">
    <div class="has-text-centered">
      <input class="form-input" type="text" value="{{id}}" id="inputTournament" hidden readonly />
      <input class="form-input" type="text" value={{session.player_id}} id="inputPlayer" hidden readonly />

      <h2 class="has-text-centered">{{tournament_name}}</h2>

      <p class="has-text-centered"><span class="has-text-weight-bold">Description: </span>{{description}}</p>

      <p class="has-text-centered"><span class="has-text-weight-bold">Participants:</span></p>
      {{#each players as |player|}}
      <p class="has-text-centered">{{player.player_name}}</p>
      {{/each}}
      </p>
      <p class="has-text-centered"><span for="img" aria-label="game">ðŸŽ®</span><span class="has-text-weight-bold">Current Player Count: </span>{{length players}} / {{player_quantity}}
        players! </p>
      <p class="has-text-centered"><span class="has-text-weight-bold">Discord: </span><a href="{{discord_link}}">Link to Tournament Server</a></p>
      <div class="has-text-centered">
      <button id="join_btn" class="btn btn-primary" type="button">Join this tournament!</button>
      </div>
    </div>
  </div>
</div>
<script src="/js/joinTournament.js"></script>