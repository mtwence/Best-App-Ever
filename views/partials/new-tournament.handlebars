<div class="card m-2 p-1">
  <div class="has-text-centered">
    <h3>Create a New Tournament:</h3>
  </div>
  <form class="form new-tournament-form">
    <div class="is-hidden">
      <label for="tournament-name">Tournament Game:</label>
      <input class="input" type="text" value="{{id}}" id="inputGame" name="tournament-game" readonly />
    </div>
    <div class="is-hidden">
      <label for="tournament-name">Tournament host:</label>
      <input class="input" type="number" value="{{session.player_id}}" id="host" name="tournament-host" readonly />
    </div>
    <div class="field">
      <label for="tournament-name">Tournament Name:</label>
      <div class="control">
        <input class="input" type="text" id="tournament-name" name="tournament-name" />
      </div>
    </div>
    <div class="field">
      <label for="tournament-name">Tournament Date:</label>
      <div class="control">
        <input class="input" type="datetime-local" id="tournament-date" name="tournament-date" />
      </div>
    </div>
    <div class="field">
      <label for="tournament-players">How many total players?:</label>
      <div class="control">
        <input class="input" type="number" id="tournament-players" name="tournament-players" />
      </div>
    </div>
    <div class="form-group">
      <label for="discord">Discord Server Link:</label>
      <div class="control">
        <input class="input" type="text" id="tournament-disc" name="tournament-discord" />
      </div>
    </div>
    <div class="field">
      <label for="tournament-desc">Description:</label>
      <div class="control">
        <input class="input" type="textarea" id="tournament-desc" name="tournament-desc" />
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<script src="/js/createTournament.js"></script>