<!-- Loop over each object in the tournaments array -->
{{#each tournaments as |tournament|}}
  <div class="row mb-4 tournament">
    <div class="col-md-5 justify-content-center">
      <h2>
        <a
          href="/tournament/{{tournament.id}}"
        >{{tournament.tournament_name}}</a>
      </h2>
      <div class="container-fluid">
        <div class="row">
          <div class="col-6">
            <img
              class="card-img-top"
              src="{{game.cover_art}}"
              alt="game art"
            />
          </div>
          <div class="col-6">
            <h3>
              {{tournament.description}}
            </h3>
            <p>
              <span for="img" aria-label="money">🎮</span>
              Minimum
              <!-- Pass needed_funding value to the helper function -->
              <span>{{tournament.player_quantity}}</span>
              players!
            </p>
            {{!-- <p>Created by
              {{tournament.player.name}}
              on
              {{format_date tournament.date_created}}</p>
              {{tournament.date_created}}</p> --}}

          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}