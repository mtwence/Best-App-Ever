<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <img class="card-img-top" src="{{cover_art}}" alt="game art" />
    </div>
    <div class="col-6">
      <div class="text-center">
        <h2>{{game_name}}</h2>
        <p>{{game_type}}</p>
        <p>{{description}}</p>

        {{#if tournaments}}
          {{#each tournaments as |tournament|}}
            <div class="row mb-4 tournament">
              <div class="col-md-5">
                <h2>
                  <a
                    href="/tournament/{{tournament.id}}"
                  >{{tournament.tournament_name}}</a>
                </h2>
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-6">
                      <h3>
                        {{tournament.description}}
                      </h3>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        {{/if}}
      </div>
    </div>
  </div>

</div>